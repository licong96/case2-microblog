{
	"parser": "@babel/eslint-parser",
	"env": {
			"es6": true,
			"commonjs": true,
			"node": true
	},
	"parserOptions": {
		"requireConfigFile": false
	},
	"rules": {
			"indent": ["error", 2],
			"quotes": [
					"error",
					"single",
					{
						"allowTemplateLiterals": true
					}
			],
			"semi": [
					"error",
					"always"
			]
	}
}
